    <section>
    <div id="vehicles">
        <h3>My Vehicles</h3>

        <div>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>VIN</th>
                        <th>Year</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Registered</th>
                        <th>Insured</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each vehicles as |vehicle|}}

                    {{>vehicle-card vehicle}}

                    {{/each}}
                </tbody>
            </table>


        </div>
    </div>
</section>
