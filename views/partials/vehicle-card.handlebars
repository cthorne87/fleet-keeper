<div>
    <h3>VIN: {{vin}}</h3>
    <div>Make: {{make}}</div>
    <div>Model: {{model}}</div>

    <div>
        {{#if registration}}
        {{>registration-info registration}}
        {{else}}
        <form id="add-registration">
            <button type="submit">Add Registration</button>
        </form>
        {{/if}}
    </div>

    <div>
        {{#if insurance}}
        {{>insurance-info insurance}}
        {{else}}
        <form id="add-insurance">
            <button type="submit">Add Insurance</button>
        </form>
        {{/if}}
    </div>
</div>